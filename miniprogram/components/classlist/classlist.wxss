.container{
    width: 710rpx;
    height: 240rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.img {
    width: 100%;
    height: 240rpx;
    border-radius: 10rpx;
}

.flag {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 10rpx;
}

.desc {
    display: flex;
    font-size: 30rpx;
    font-weight: bolder;
    color: #fff;
    position: absolute;
    bottom: 30rpx;
}