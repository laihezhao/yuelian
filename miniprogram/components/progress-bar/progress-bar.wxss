.container {
    display: flex;
    align-items: center;
  }
  
  .control {
    position: relative;
    flex: 1;
  }
  
  .movable-area {
    width: 100%;
    height: 34rpx;
    position: absolute;
    bottom: -14rpx;
    left: 0;
  }
  
  .movable-view {
    width: 36rpx;
    height: 36rpx;
    /* background: #fefefe; */
    background: #f0f0f0;
    border-radius: 50%;
  }
  
  .time {
    width: 64rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    font-family: NotoSansHans-Regular;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    line-height: 30rpx;
  }
  